{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "js/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/js/(.*)",
            "dest": "/js/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/backend/server.js"
        }
    ]
}